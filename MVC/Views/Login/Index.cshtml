@model Cs.Unicam.TrashHunter.MVC.Models.ViewModels.LoginViewModel
@{

}


<div class="container d-flex justify-content-center">
    <div class="card bg-light col-md-6">
        <div class="card-header">
            <div class="card-title">Login</div>
        </div>
        <div class="card-body">
            <form class="" asp-area="" asp-controller="@(LoginController.GetControllerName<LoginController>())" asp-action="@nameof(LoginController.Index)" method="post">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Inserisci la tua email" required>
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6 mt-1">
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Inserisci la tua password" required>
                        </div>
                    </div>
                </div>
                
                <div class="row d-flex justify-content-center mt-2">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>